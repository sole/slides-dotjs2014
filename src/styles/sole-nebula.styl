// Changes to the default Bespoke nebula style
.bespoke-parent
  color: #fff
  background: #000

.bespoke-slide tt
  text-transform: none

h1, h2
  letter-spacing: 0.1em

.intro h1
  border-width: 0.4rem 0 0.4rem 0

.supposition h1
  border-width: 0  

code
  font-weight: bold !important

tt
  font-style: normal !important
  
a
  padding-left: 0

iframe
  border: 1px solid #333
  height: 70%
  width: 90%

.horizontal li
  display: inline
  padding: 0
  margin: 0
  
.horizontal
  text-align: center

.horizontal li:before
  content: ""

.horizontal img
  width: 30%
  height: auto

.emphatic
  background: linear-gradient(red, black)
  
.filter-invert
  filter: invert(100%)

